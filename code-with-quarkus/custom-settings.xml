<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>project-repository</id>
            <username>admin</username>
            <password>admin123</password>
        </server>
        <server>
            <id>internal-repository</id>
            <username>admin</username>
            <password>admin123</password>
        </server>
    </servers>
    <mirrors>
        <mirror>
            <id>internal-repository</id>
            <name>maven-public</name>
            <url>http://localhost:8083/nexus/content/repositories/central</url>
            <mirrorOf>external:*,!project-repository</mirrorOf>
        </mirror>
    </mirrors>
    <profiles>
        <profile>
            <id>repositories</id>
            <repositories>
                <repository>
                    <id>public</id>
                    <name>Public</name>
                    <url>http://localhost:8083/nexus/content/repositories/central</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>fail</checksumPolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>project-repository</id>
                    <name>third-party</name>
                    <url>http://localhost:8083/nexus/content/repositories/thirdparty/</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>fail</checksumPolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>repositories</activeProfile>
    </activeProfiles>
</settings>